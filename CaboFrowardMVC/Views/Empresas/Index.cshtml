@model IEnumerable<CaboFrowardMVC.Models.EMPRESAS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["MisMenus"].ToString().Contains("EMPRESAS"))
{


    <h2>Lista de Empresas</h2>

    <p>
        @Html.ActionLink("Nuevo", "Create")
    </p>

    Html.BeginForm("Index", "Empresas");
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Buscar:</label>
            <div class="col-md-6">
                <input type="text" name="inpBuscar" class="form-control"
                       placeholder="Introduzca un nombre o giro de la empresa" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <i class="fa fa-refresh" style="color:blue;"></i>
                <input type="submit" value="Filtrar" class="btn btn-default" id="btngetdata">
            </div>
        </div>
    </div>
    Html.EndForm();

    <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RUT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NOMBRES)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GIRO)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RUT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRES)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GIRO)
                </td>
           
				<td>
					@Html.ActionLink("Editar", "Edit", new { id = item.ID_EMPRESA }, new { @class = "btn btn-success btn-xs" }) | 
					@Html.ActionLink("Detalle", "Details", new { id = item.ID_EMPRESA }, new { @class = "btn btn-info btn-xs" }) | 
					@Html.ActionLink("Borrar", "Delete", new { id = item.ID_EMPRESA }, new { @class = "btn btn-danger btn-xs" }) |
				</td>
            </tr>
        }

    </table>

}
else
{

    <div class="alert alert-danger alert-dismissible">
        <strong>Acceso Restringido!</strong> No está autorizado para ver esta página, pongase en contacto con el administrador
    </div>

    <input type="hidden" id="txt_acceso" value="SIN_ACCESO" />
}
