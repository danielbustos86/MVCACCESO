@model CaboFrowardMVC.Models.MisUsuarios

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/usuarioPerfil")
<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>
<h2>Editar</h2>

<a href="~/Content/DatatableUtil/Spanish.json">~/Content/DatatableUtil/Spanish.json</a>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">


    @Html.HiddenFor(model => model.Id)

    <div class="col-md-10">
        <div id="idusuario">
            <label id="idusuarios" hidden> @(Model.Id)</label>

        </div>

    </div>


    <div class="form-group">
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
            <input type="submit" value="Guardar" class="btn btn-success btn-block" />
        </div>
        <div class="col-md-8">
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Rut, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Rut, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })

        </div>
        <div class="col-md-2">
            <input type="button" value="Buscar" class="btn btn-default btn-block" />
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Clave, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2" for="Activo">Activo</label>
        <div class="col-md-10">

            @if (Model.Activo == "S")
            {
                <input type="checkbox" data-toggle="toggle" id="Activo" checked name="Activo" />
            }
            else
            {
                <input type="checkbox" data-toggle="toggle" id="Activo" name="Activo" />
            }
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Activo">Aprueba Nave</label>
        <div class="col-md-10">

            @if (Model.Aprueba_nave == "S")
            {
                <input type="checkbox" data-toggle="toggle" id="aprueba_nave" checked name="aprueba_nave" />
            }
            else
            {
                <input type="checkbox" data-toggle="toggle" id="aprueba_nave" name="aprueba_nave" />
            }
        </div>
    </div>
    

</div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
<div class="col-md-6">
    <h4 style="padding-top:10px;padding-bottom:10px;padding-left:5px;background-color:#F8F8F8">Perfiles </h4>
    <div class="form-group">
        <div class="table-responsive">
            <table id="TablaPerfilUsuario" class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            <label></label>
                        </th>
                        <th>ID PERFIL</th>
                        <th>PERFIL</th>

                    </tr>
                </thead>
                <tbody id="cuerpoTP"></tbody>
            </table>
        </div>
    </div>
</div>

<div class="col-md-6">
    <h4 style="padding-top:10px;padding-bottom:10px;padding-left:5px;background-color:#F8F8F8">Locaciones</h4>
    <div class="form-group">
        <div class="table-responsive">
            <table id="TablaLocacionUsuario" class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            <label></label>
                        </th>
                        <th>ID</th>
                        <th>LOCACION</th>
                        <th>PUERTO</th>
                    </tr>
                </thead>
                <tbody id="cuerpoTP1"></tbody>
            </table>
        </div>
    </div>
</div>
