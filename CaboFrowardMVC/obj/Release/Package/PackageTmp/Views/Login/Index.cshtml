@{
    Layout = "";
}

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<meta name="viewport" content="width=device-width">
	<meta name="mobile-web-app-capable" content="yes">
	<link rel="icon" sizes="192x192" href="../icon.png">
	<title>Talcahuano Terminal Portuaria S.A - Control Ingreso - SCCNLP</title>
	<link href="../content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="../content/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
	<link href="../content/dist/css/sb-admin-2.css" rel="stylesheet">
	<link href="../content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
	<script src="../content/vendor/jquery/jquery.min.js"></script>
	<script src="../content/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="../content/vendor/metisMenu/metisMenu.min.js"></script>
	<script src="../content/dist/js/sb-admin-2.js"></script>
	<script src="~/Scripts/Custom/Login.js"></script>


</head>


<body>

    <div class="container">
        <div class="row" align="center">
            <div class="col-md-4 col-md-offset-4">
                <div><img src="../content/img/Logo_Froward nuevo_.png" alt="CaboFroward"></div>
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @name = "form_login", id = "form_login" }))
                        {
                            <form role="form">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" id="Usuario" placeholder="Usuario" name="usuario" type="text" autofocus>

                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="Clave" placeholder="Clave" name="clave" type="password" value="">

                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                        </label>
                                    </div>




                                </fieldset>
                                <input type="hidden" id="txt_valida" value="SI" name="txt_valida" />
                            </form>
                        }
                        <button id="btn_login" Class="btn btn-lg btn-success btn-block">Login</button>


                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.Err_val != "")
    {
        <div class="alert alert-danger text-center">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error</strong> @ViewBag.Err_val
        </div>
    }


    <div class="alert alert-danger text-center" id="mensaje_val_prin">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Error</strong> <label id="mensaje_error_prin"></label>
    </div>


    <div class="modal fade" role="dialog" tabindex="-1" id="ModalCambio">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="color: #333;background-color: #f5f5f5;border-color: #ddd;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Cambiar Contraseña</h4>
                </div>

                <div class="modal-body" style="padding-top: 2px;padding-bottom: 2px;">
                    <div style=" text-align: center;"><img src="../content/img/Logo_Froward nuevo_.png" alt="CaboFroward"></div>
                    <h4>Se solicita cambiar su contraseña <strong>INICIAL</strong> para ingresar al sistema</h4>
                    <div class="form-group">
                        <label class="control-label" for="text-input">Contraseña Actual</label>
                        <input class="form-control" type="password" name="CodigoBuscador" id="txt_inicial">
                        <label class="control-label" for="text-input">Nueva Contraseña</label>
                        <input class="form-control" type="password" name="Nombrelocacioncs" id="txt_nueva">
                        <label class="control-label" for="text-input">Repita Contraseña</label>
                        <input class="form-control" type="password" name="Nombrelocacioncs" id="txt_compara">


                        <div class="table-responsive">
                            <table id="tablalocacionescs" class="table table-striped ColumnTable"></table>
                        </div>                        
                        <div class="alert alert-danger text-center" id="mensaje_val">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Error</strong> <label id="mensaje_error"></label>
                        </div>
                    </div>                  

                </div>

                <div class="modal-footer" style="padding-top: 5px;">

                    <button class="btn btn-success" type="button" id="btn_aceptar">Confirmar</button>
                </div>
            </div>
        </div>
    </div>




</body>


