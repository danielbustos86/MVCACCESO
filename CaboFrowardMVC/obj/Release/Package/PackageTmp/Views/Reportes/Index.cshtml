
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/js_solicitud")
@Scripts.Render("~/bundles/Reportes")

<h2>Reporte de Solicitudes</h2>



<div class="col-md-12">

    <div class="col-md-4">
        <button id="btnbuscarr1" class="btn btn-success btn-block btn-lg" style="padding-top:10px;padding-bottom:10px" type="button">BUSCAR</button>
    </div>


    <div class="col-md-4">
        <button id="btnexp1" class="btn btn-primary btn-block btn-lg" style="padding-top:10px;padding-bottom:10px" type="button">EXPORTAR</button>
    </div>

    <div class="col-md-12">
        <div class="form-group" style="margin-bottom: 5px;">
            <label class="control-label" for="Puerto">Puerto </label>
            <select id="SelectPuerto" class="form-control"></select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group" style="margin-bottom: 5px;">
            <label class="control-label" for="Puerto">Fecha inicio</label>
            @*<input id="fechainicio" type="text">*@
            <input class="form-control" type="text" id="fechainicio">

        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group" style="margin-bottom: 5px;">
            <label class="control-label" for="Puerto">Fecha termino</label>

            <input class="form-control" type="text" id="fechatermino">
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group" style="margin-bottom: 5px;">
            <label class="control-label" for="Puerto">Tipo de Ingreso </label>
            <select id="SelecttipoIngres" class="form-control"></select>
        </div>
    </div>


    <div class="col-md-12">
        <div class="form-group" style="margin-bottom: 5px;">
            <label class="control-label" for="Puerto">Empresa</label>
            <select id="SelectEmpresa" class="form-control"></select>

            @*<div class="form-group" align="right">
                    <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#ModalEMpresa">+</button>
                </div>*@
        </div>
    </div>

</div>
<div class="col-md-12">
    <div class="form-group">
        <div class="table-responsive">
            <table id="tabla_reporte1" class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            ID SOLICITUD
                        </th>
                        <th>RUT</th>
                        <th>NOMBRE</th>
                        <th>LOCACION</th>
                        <th>NAVE</th>
                        <th>FECHA DESDE</th>
                        <th>FECHA HASTA</th>
                        <th>TIPO DE INGRESO</th>
                        <th>EMPRESA</th>

                    </tr>
                </thead>
                <tbody id="cuerpoTP1"></tbody>
            </table>
        </div>
    </div>
</div>