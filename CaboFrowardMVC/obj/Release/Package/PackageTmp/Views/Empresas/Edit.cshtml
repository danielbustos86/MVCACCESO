@model CaboFrowardMVC.Models.EMPRESAS

@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["MisMenus"].ToString().Contains("EMPRESAS"))
{

	<h2>Editar</h2>

	using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>EMPRESAS</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.ID_EMPRESA)

		<div class="row">
			<div class="col-md-6">






				<div class="col-md-10">
					<div class="form-group" style="margin-bottom: 5px;">

						<label class="control-label">Rut</label>
						@Html.EditorFor(model => model.RUT, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.RUT, "", new { @class = "text-danger" })
					</div>
				</div>


				<div class="col-md-2">
					<div class="form-group" style="margin-bottom: 5px;">

						<label class="control-label">Dv</label>
						@Html.EditorFor(model => model.DV, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.DV, "", new { @class = "text-danger" })
					</div>
				</div>


				<div class="col-md-12">
					<div class="form-group" style="margin-bottom: 5px;">

						<label class="control-label">Nombres</label>
						@Html.EditorFor(model => model.NOMBRES, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.NOMBRES, "", new { @class = "text-danger" })
					</div>
				</div>


				<div class="col-md-12">
					<div class="form-group" style="margin-bottom: 5px;">

						<label class="control-label">Giro</label>
						@Html.EditorFor(model => model.GIRO, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.GIRO, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="col-md-12">
					<div class="form-group" style="margin-bottom: 5px;">
						<label class="control-label">Inactivo</label>

						@Html.EditorFor(model => model.INACTIVO, new { htmlAttributes = new { @class = "checkbox" } })
						@Html.ValidationMessageFor(model => model.INACTIVO, "", new { @class = "text-danger" })

					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-12">
						<input type="submit" value="Guardar" class="btn btn-primary" />
					</div>
				</div>
			</div>
		</div>

		<div class="form-group" style="visibility:hidden">
			@Html.LabelFor(model => model.ID_TIPO_EMPRESA, "TIPO DE EMPRESA", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("ID_TIPO_EMPRESA", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.ID_TIPO_EMPRESA, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>
	}

	<div>
		@Html.ActionLink("Volver", "Index")
	</div>
}
else
{


	<div class="alert alert-danger alert-dismissible">
		<strong>Acceso Restringido!</strong> No está autorizado para ver esta página, pongase en contacto con el administrador
	</div>

	<input type="hidden" id="txt_acceso" value="SIN_ACCESO" />
}
