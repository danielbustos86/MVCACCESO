@model CaboFrowardMVC.Models.PERSONAS

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/PersonaEF")

@if (Session["MisMenus"].ToString().Contains("PERSONAS"))
{


	<h2>Crear</h2>

	using (Html.BeginForm())

	{
		@Html.AntiForgeryToken()


		<div class="form-horizontal">
			<h4>PERSONAS</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="row">
				<div class="col-md-6">


					<div class="col-md-12">
						<div class="form-group" style="margin-bottom: 5px;">

							<label class="control-label">Nacionalidad </label>

							@Html.DropDownList("ID_NACIONALIDAD", null, String.Empty, htmlAttributes: new { @class = "form-control" })


							@Html.ValidationMessageFor(model => model.ID_NACIONALIDAD, "", new { @class = "text-danger" })

						</div>
					</div>

					<div class="col-md-10">
						<div class="form-group" style="margin-bottom: 5px;">


							<label class="control-label">Rut</label>

							@Html.EditorFor(model => model.RUT, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.RUT, "", new { @class = "text-danger" })

						</div>
					</div>
					<div class="col-md-2">
						<div class="form-group" style="margin-bottom: 5px;">

							<label class="control-label">dv</label>

							@Html.EditorFor(model => model.DV, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.DV, "", new { @class = "text-danger" })
						</div>
					</div>





					<div class="col-md-12">
						<div class="form-group" style="margin-bottom: 5px;">


							<label class="control-label">Nombre</label>

							@Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })

						</div>
					</div>

					<div class="col-md-12">
						<div class="form-group" style="margin-bottom: 5px;">


							<label class="control-label">Apellido Paterno</label>

							@Html.EditorFor(model => model.APELLIDOPATERNO, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.APELLIDOPATERNO, "", new { @class = "text-danger" })
						</div>
					</div>


					<div class="col-md-12">
						<div class="form-group" style="margin-bottom: 5px;">


							<label class="control-label">Apellido Materno</label>

							@Html.EditorFor(model => model.APELLIDOMATERNO, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.APELLIDOMATERNO, "", new { @class = "text-danger" })
						</div>
					</div>



					<div class="col-md-12">
						<div class="form-group" style="margin-bottom: 5px;">

							<label class="control-label">Pasaporte</label>

							@Html.EditorFor(model => model.PASAPORTE, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.PASAPORTE, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="col-md-12">
						<div class="form-group" style="margin-bottom: 5px;">

							<label class="control-label">Fecha Induccion</label>

							@Html.EditorFor(model => model.FECHAINDUCCION, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.FECHAINDUCCION, "", new { @class = "datefield", type = "date" })
						</div>
					</div>

					<div class="col-md-12" style="visibility:hidden">
						<div class="form-group" style="margin-bottom: 5px;">


							<label class="control-label">Inactivo</label>

							@Html.EditorFor(model => model.INACTIVO, new { htmlAttributes = new { @class = "checkbox" } })
							@Html.ValidationMessageFor(model => model.INACTIVO, "", new { @class = "text-danger" })

						</div>

					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Guardar" class="btn btn-primary" />

				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				@ViewBag.Error
			</div>
		</div>

	}


	<div>
		@Html.ActionLink("Volver", "Index")
	</div>

}
else
{
	<div class="alert alert-danger alert-dismissible">
		<strong>Acceso Restringido!</strong> No está autorizado para ver esta página, pongase en contacto con el administrador
	</div>

	<input type="hidden" id="txt_acceso" value="SIN_ACCESO" />
}

