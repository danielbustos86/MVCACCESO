@model IEnumerable<CaboFrowardMVC.Models.PERSONAS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["MisMenus"].ToString().Contains("PERSONAS"))
{

    <h2>Listado de Personas</h2>

    <p>
        @Html.ActionLink("Nuevo", "Create")
    </p>
        Html.BeginForm("Index", "Personas");
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-2">Buscar:</label>
                    <div class="col-md-6">
                        <input type="text" name="inpBuscar" class="form-control"
                               placeholder="Introduzca un nombre o apellido paterno para filtrar" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <i class="fa fa-refresh" style="color:blue;"></i>
                        <input type="submit" value="Filtrar" class="btn btn-default" id="btngetdata">
                    </div>
                </div>
            </div>
        Html.EndForm();
 

    <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RUT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NOMBRE)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.APELLIDOPATERNO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.APELLIDOMATERNO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PASAPORTE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NACIONALIDADES.NACIONALIDAD))
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RUT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.APELLIDOPATERNO)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.APELLIDOMATERNO)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.PASAPORTE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NACIONALIDADES.NACIONALIDAD)
            </td>
			<td>
				@Html.ActionLink("Editar", "Edit", new
	{
		id = item.ID_PERSONA
	}, new { @class = "btn btn-success btn-xs" }) 

				@Html.ActionLink("Borrar", "Delete", new { id = item.ID_PERSONA }, new { @class = "btn btn-danger btn-xs" }) 
			</td>
        </tr>
        }

    </table>
}
else
{


    <div class="alert alert-danger alert-dismissible">
        <strong>Acceso Restringido!</strong> No está autorizado para ver esta página, pongase en contacto con el administrador
    </div>

    <input type="hidden" id="txt_acceso" value="SIN_ACCESO" />
}
