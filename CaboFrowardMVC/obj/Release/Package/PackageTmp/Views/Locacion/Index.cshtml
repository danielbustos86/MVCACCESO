
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Session["MisMenus"].ToString().Contains("MANTENEDOR_LOCACION"))
{
    
    <script src="~/Scripts/Custom/Agregar_Locacion.js"></script>    
    <link href="~/Content/bootstrap-editable.css" rel="stylesheet" />    
    <script src="~/Scripts/bootstrap-editable.min.js"></script>       
    <link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-toggle.min.js"></script>
    
        
    <h4>Locaciones registradas en Dirección del Trabajo</h4>
    <hr style="
    margin-bottom: 5px;
    margin-top: 10px;">

    <div class="bd-example">

        <form class="col-md-7">



            <div class="form-group row" style="margin-bottom: 8px;" id="div_guarda">
                <div class="col-sm-2">
                    <button class="btn btn-success btn-block" type="button" id="btn_guardar">Guardar</button>
                </div>
            </div>



            <div class="form-group row" style="margin-bottom: 8px;">
                <label for="cbx_puerto" class="col-sm-2 col-form-label">Puerto</label>
                <div class="col-sm-10">
                    <select id="cbx_puerto" class="form-control" style="HEIGHT: 30PX;"></select>
                </div>
            </div>

            <div class="form-group row" style="margin-bottom: 8px;">
                <label for="cbx_informada" class="col-sm-2 col-form-label">Informada</label>
                <div class="col-sm-10">
                    <select id="cbx_informada" class="form-control" style="HEIGHT: 30PX;">
                        <option value="1">SI</option>
                        <option value="0">NO</option>
                        <option value="2" selected>Seleccionar</option>

                    </select>
                </div>
            </div>


            <div class="form-group row" style="margin-bottom: 8px;">
                <label for="txt_id" class="col-sm-2 col-form-label">Id</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="txt_id" style="HEIGHT: 30PX;">
                </div>
            </div>


            <div class="form-group row" style="margin-bottom: 8px;">
                <label for="txt_descripcion" class="col-sm-2 col-form-label">Descripcion</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txt_descripcion" style="HEIGHT: 30PX;">
                </div>

                <div class="col-sm-2" style="padding-left: 5px;">
                    <button type="button" class="btn btn-primary btn-block text-center" style="HEIGHT: 30PX;" id="btn_locacion">
                        <span class="glyphicon glyphicon-plus-sign"></span>
                    </button>

                </div>
            </div>


            <div class="form-group row" style="margin-bottom: 8px;">
                <label for="txt_descripcion" class="col-sm-2 col-form-label">Buscar</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="txt_buscar" style="HEIGHT: 30PX;">
                </div>                
            </div>




            <div class="form-group row" style="margin-bottom: 8px;">
                <div class="table-responsive">
                    <table id="tabla_locacion" class="table table-striped table-bordered table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Descripción</th>
                                <th>Activo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>



        </form>
    </div>



    <div class="modal fade" role="dialog" tabindex="-1" id="ModalLoc">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="color: #333;background-color: #f5f5f5;border-color: #ddd;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Locaciones registradas en Dirección del Trabajo</h4>
                </div>
                <div class="modal-body" style="padding-top: 2px;padding-bottom: 2px;">

                    <div class="form-group">
                        <label class="control-label" for="text-input">Descripcion</label>
                        <input class="form-control" type="text" id="txt_descripcion_loc" />
                    </div>


                    <div class="table-responsive" style="max-height: 350px;">
                        <table id="tabla_loc_web" class="table table-striped table-bordered table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>Descripción</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer" style="padding-top: 5px;">
                    <button class="btn btn-primary" type="button" data-dismiss="modal" id="btn_aceptar">Cerrar</button>

                </div>
            </div>
        </div>
    </div>
}
else
{


    <div class="alert alert-danger alert-dismissible">
        <strong>Acceso Restringido!</strong> No está autorizado para ver esta página, pongase en contacto con el administrador
    </div>

    <input type="hidden" id="txt_acceso" value="SIN_ACCESO" />


}



